@model SSMP.Models.UserManagenent.ShowUserInputModel

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="container">
    <h2 class="well">  Edit User <span class="glyphicon glyphicon-chevron-right"></span>  @ViewData["Username"] </h2>
    <div class="col-lg-12 well">
    <div class="row">
                <form asp-controller="UserManagement" asp-action="Edit" method="post" enctype="multipart/form-data">

                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label asp-for="Username" class="control-label"></label>
                                <input asp-for="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6 form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label asp-for="Firstname" class="control-label"></label>
                                <input asp-for="Firstname" class="form-control" />
                                <span asp-validation-for="Firstname" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6 form-group">
                                <label asp-for="Lastname" class="control-label"></label>
                                <input asp-for="Lastname" class="form-control" />
                                <span asp-validation-for="Lastname" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label asp-for="Status" class="control-label"></label>
                                <select asp-for="Status" class="form-control">
                                    <option value="A">Active</option>
                                    <option value="D">DeActive</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6 form-sgroup">
                                <label asp-for="GroupId" class="control-label"></label>
                                <select asp-for="GroupId" class="form-control">
                                    <option value="99">Admin</option>
                                    <option value="50">Project Manager</option>
                                    <option value="10">Team</option>
                                </select>
                                <span asp-validation-for="GroupId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label asp-for="UserTel" class="control-label"></label>
                                <input asp-for="UserTel" class="form-control" />
                                <span asp-validation-for="UserTel" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6 form-group">
                                <label asp-for="LineId" class="control-label"></label>
                                <input asp-for="LineId" class="form-control" />
                                <span asp-validation-for="LineId" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label asp-for="JobResponsible" class="control-label"></label>
                                <input asp-for="JobResponsible" class="form-control" />
                                <span asp-validation-for="JobResponsible" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label>User Image</label>
                                <input type="file" asp-for="Image" placeholder="Enter Image Here.." class="form-control">
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="text-right" style="margin-right: 10px;">

                                <a asp-action="Index" class="btn btn-danger">Back</a>

                                <input type="submit" value="Save" class="btn btn-default btn-primary" />
                            </div>
                        </div>
                    </div>
                </form> 
                </div>
    </div>
</div>