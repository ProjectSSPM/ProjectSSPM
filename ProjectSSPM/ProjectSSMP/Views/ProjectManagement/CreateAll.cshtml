@{
    ViewData["Title"] = "Create Project All";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="container">
    <div class="row">
        <section>
        <div class="wizard">
            <div class="wizard-inner">
                <div class="connecting-line"></div>
                <ul class="nav nav-tabs" role="tablist">

                    <li role="presentation" class="active">
                        <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-folder-open"></i>
                            </span>
                        </a>
                    </li>

                    <li role="presentation" class="disabled">
                        <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </span>
                        </a>
                    </li>
                    <li role="presentation" class="disabled">
                        <a href="#step3" data-toggle="tab" aria-controls="step3" role="tab" title="Step 3">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-picture"></i>
                            </span>
                        </a>
                    </li>

                    <li role="presentation" class="disabled">
                        <a href="#complete" data-toggle="tab" aria-controls="complete" role="tab" title="Complete">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-ok"></i>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>

            <form role="form">
                <div class="tab-content">
                    <div class="tab-pane active" role="tabpanel" id="step1">
                        <form asp-controller="ProjectManagement" asp-action="CreateAll" method="post">
                            
                                <div class="col-sm-6 form-group">
                                        <label>Project ID</label>
                                    <div class="form-group">
                                        <input type="text" name="ProjectId" id="ProjectId" placeholder="Enter Project ID Here.." class="form-control">
                                    </div>
                                </div>
                           

            
                           <div class="col-sm-8 form-group">
                                 <label>Project Name</label>
                                 <div class="form-group">
                                    <input type="text" name="ProjectName" id="ProjectName" placeholder="Enter Project Name Here.." class="form-control">
                                </div>
                            </div>
                

                            <div class="col-sm-6 form-group">
                                <label>Estimated Start Date</label>
                                <div class="form-group">      
                                        <div class="input-group date form_date col-md-8" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                            <input class="form-control" size="10" type="text" name="ProjectStart" id="ProjectStart"  readonly>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                    </div>
                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Estimated Stop Date</label>
                                <div class="form-group">
                                    <div class="input-group date form_date col-md-8" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                        <input class="form-control" size="10" type="text" name="ProjectEnd" id="ProjectEnd" readonly>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>
                                </div>
                            </div>

                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Project Manager</label>
                                <input type="text" name="ProjectManager" id="ProjectManager" placeholder="Select Manager Name Here.." class="form-control">
                            </div>
                        </div>


                        <div class="col-sm-2">
                            
                        </div>
            
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Estimated Cost</label>
                                <input type="text" name="ProjectCost" id="ProjectCost" placeholder="Enter Project Cost Here.." class="form-control">
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Customer Name</label>
                                <input type="text" name="CustomerName" id="CustomerName" placeholder="Select Customer Name Here.." class="form-control">
                            </div>
                        </div>

                        <div class="col-sm-2">
                            
                        </div>
                        
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Customer Tel.</label>
                                <input type="text" name="CustomerTel" id="CustomerTel" placeholder="Enter Customer Tel. Here.." class="form-control">
                            </div>
                        </div>

                        <div class="col-sm-10">
                            <label>Project Description</label>
                            <textarea placeholder="Enter Desc Here.." name="Note" id="Note" rows="3" class="form-control"></textarea>
                        </div> 

                        <div class="col-sm-10">
                            &nbsp;
                        </div>
                         <div class="col-sm-10">
                            
                        </div>
                        
                        @*<div class= "col-sm-10 text-right" style="margin-right: 10px;">
                            
                            <button type="submit" class="btn btn-primary">Submit</button> 
                        </div>*@
                        <ul class="list-inline pull-right">
                            <li><button type="button" class="btn btn-primary next-step">Save and continue</button></li>
                        </ul>
                        
                  </form>


                        @*<h3>Step 1</h3>
                        <p>This is step 1</p>
                        <ul class="list-inline pull-right">
                            <li><button type="button" class="btn btn-primary next-step">Save and continue</button></li>
                        </ul>*@
                    </div>
                    <div class="tab-pane" role="tabpanel" id="step2">
                        <h3>Step 2</h3>
                        <p>This is step 2</p>
                        <ul class="list-inline pull-right">
                            <li><button type="button" class="btn btn-default prev-step">Previous</button></li>
                            <li><button type="submit" class="btn btn-primary next-step">Save and continue</button></li>
                        </ul>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="step3">
                        <h3>Step 3</h3>
                        <p>This is step 3</p>
                        <ul class="list-inline pull-right">
                            <li><button type="button" class="btn btn-default prev-step">Previous</button></li>
                            <li><button type="button" class="btn btn-default next-step">Skip</button></li>
                            <li><button type="button" class="btn btn-primary btn-info-full next-step">Save and continue</button></li>
                        </ul>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="complete">
                        <h3>Complete</h3>
                        <p>You have successfully completed all steps.</p>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </form>
        </div>
    </section>
   </div>
</div>