@{
    ViewData["Title"] = "Create Project";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}


<div class="container">
    <h1 class="well">Create Project</h1>
    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["ErrorCreatePtoject"].Errors.Count > 0)
    {
        <div class="alert alert-danger">
            <strong>Danger!</strong> <span class="text-danger "> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            @ViewData.ModelState["ErrorCreatePtoject"].Errors.First().ErrorMessage
        </span>
        </div>
        

    }
    <div class="col-lg-12 well">

        <form asp-controller="ProjectManagement" asp-action="CreateProject" method="post">

            <div class="col-sm-6 form-group">
                <label>Project ID</label>
                <div class="form-group">
                    <input type="text" name="ProjectId" id="ProjectId" placeholder="Enter Project ID Here.." class="form-control" required>
                </div>
            </div>



            <div class="col-sm-8 form-group">
                <label>Project Name</label>
                <div class="form-group">
                    <input type="text" name="ProjectName" id="ProjectName" placeholder="Enter Project Name Here.." class="form-control" required>
                </div>
            </div>


            <div class="col-sm-6 form-group">
                <label>Estimated Start Date</label>
                <div class="form-group">
                    <div class="input-group date form_date col-md-8" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                        <input class="form-control" size="10" type="text" name="ProjectStart" id="ProjectStart" readonly>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                    </div>

                </div>

            </div>
            <div class="col-sm-6 form-group">
                <label>Estimated Stop Date</label>
                <div class="form-group">
                    <div class="input-group date form_date col-md-8" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                        <input class="form-control" size="10" type="text" name="ProjectEnd" id="ProjectEnd" readonly>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                    </div>
                </div>
            </div>

            <div class="col-sm-4">
                <div class="form-group">
                    <label>Project Manager</label>
                    @*<input type="text" name="ProjectManager" id="ProjectManager" placeholder="Select Manager Name Here.." class="form-control">*@
                    <select class="form-control" asp-items="ViewBag.UserSSPM" name="ProjectManager" id="ProjectManager" required>
                        <option>Please select </option>
                    </select>
                </div>
            </div>


            <div class="col-sm-2">

            </div>

            <div class="col-sm-4">
                <div class="form-group">
                    <label>Estimated Cost</label>
                    <input type="text" name="ProjectCost" id="ProjectCost" placeholder="Enter Project Cost Here.." class="form-control">
                </div>
            </div>

            <div class="col-sm-4">
                <div class="form-group">
                    <label>Customer Name</label>
                    <input type="text" name="CustomerName" id="CustomerName" placeholder="Select Customer Name Here.." class="form-control">
                </div>
            </div>

            <div class="col-sm-2">

            </div>

            <div class="col-sm-4">
                <div class="form-group">
                    <label>Customer Tel.</label>
                    <input type="text" name="CustomerTel" id="CustomerTel" placeholder="Enter Customer Tel. Here.." class="form-control">
                </div>
            </div>

            <div class="col-sm-10">
                <label>Project Description</label>
                <textarea placeholder="Enter Desc Here.." name="Note" id="Note" rows="3" class="form-control"></textarea>
            </div>

            <div class="col-sm-10">
                &nbsp;
            </div>
            <div class="col-sm-10">

            </div>

            <div class="col-sm-12 text-right" style="margin-right: 10px;">
                <a asp-action="Index" class="btn btn-danger">Back</a>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

        </form>
    </div>
</div>
   