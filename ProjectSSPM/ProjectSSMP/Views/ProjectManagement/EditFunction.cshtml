@model ProjectSSMP.Models.ProjectManagement.CreateFunctionInputModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title" id="myModalLabel">Edit Function <span class="glyphicon glyphicon-chevron-right"></span> @ViewData["naemFunction"]</h4>
</div>

<div class="modal-body">

    <div class="row">
        <form asp-controller="ProjectManagement" asp-action="EditFunction" method="post">
            <input type="hidden" asp-for="ProjectNumber" />
            <input type="hidden" asp-for="TaskId" />
            <input type="hidden" asp-for="FunctionId" />
            <div class="col-sm-8 form-group">
                <label>Task Name</label>
                <div class="form-group">
                    <input type="text" asp-for="FunctionName" name="FunctionName" id="FunctionName" placeholder="Enter Function Name Here.." class="form-control">
                </div>
            </div>

            <div class="col-sm-10 form-group">
                <label>Estimated Start Date</label>
                <div class="form-group">
                    <div class="input-group date form_date col-md-8" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                        <input class="form-control" size="10" type="text" asp-for="FunctionStart" name="FunctionStart" id="FunctionStart" readonly>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                    </div>
                </div>
            </div>

            <div class="col-sm-10 form-group">
                <label>Estimated End Date</label>
                <div class="form-group">
                    <div class="input-group date form_date col-md-8" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                        <input class="form-control" size="10" type="text" asp-for="FunctionEnd" name="FunctionEnd" id="FunctionEnd" readonly>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                    </div>
                </div>
            </div>

            <div class="col-sm-8 form-group">
                <label>UserId</label>
                <div class="form-group">
                    <select class="form-control" asp-for="UserId" name="UserId" id="UserId" asp-items="ViewBag.UserSSPM">
                        <option>Please select </option>
                    </select>
                </div>
            </div>
            <div class="col-sm-8 form-group">
                <label>ProjectResponsible</label>
                <div class="form-group">
                    <input type="text" asp-for="ProjectResponsible" name="ProjectResponsible" id="ProjectResponsible" placeholder="Enter Function Name Here.." class="form-control">
                </div>
            </div>

            <div class="col-sm-12 text-right">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

        </form>
    </div>
</div>
<script type="text/javascript" src="~/js/bootstrap-datetimepicker.js" charset="UTF-8"></script>
<script type="text/javascript" src="~/js/locales/bootstrap-datetimepicker.fr.js" charset="UTF-8"></script>
<script type="text/javascript">



    $('.form_datetime').datetimepicker({
        //language:  'en',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
    $('.form_date').datetimepicker({
        language: 'en',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
    $('.form_time').datetimepicker({
        language: 'en',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 1,
        minView: 0,
        maxView: 1,
        forceParse: 0
    });
</script>          