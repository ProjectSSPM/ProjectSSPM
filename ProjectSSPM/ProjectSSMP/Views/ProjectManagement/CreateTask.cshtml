           <div class="col-lg-4">
               <div class= "text-Left">
                    <a asp-action="Index" class="btn btn-danger" >Back</a>
               </div>
            </div>
            <div class="col-lg-4"></div>
            <div class="col-lg-4">
                <div class= "text-right">
                    <button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModal">Add Task</button>
                </div>
            </div>

           
   <div class="col-lg-12">&nbsp;</div>
    
    <table id="example" class="responsive" width="100%">
    <thead>
        <tr>
                <th>
                    Task ID
                </th>
                <th>
                    Task Name
                </th>

                <th>
                    Estimated Start
                </th>
                <th>
                    Estimated End
                </th>
                <th>
                    
                    Estimated Variant
                   
                </th>
                 <th>
                    
                 
                   
                </th>
        </tr>
    </thead>
    <tbody>

        @{  int autonum = 1;  }
        
@foreach (var item in Model) {
        <tr>
            <td>

               @autonum
            </td>
            <td>
              
                @Html.DisplayFor(modelItem => item.TaskName)
            </td>


            <td>
                
                @Convert.ToString(string.Format("{0:dd MMMM yyyy}", item.TaskStart))
            </td>
            <td>
                
                @Convert.ToString(string.Format("{0:dd MMMM yyyy}", item.TaskEnd))
            </td>

            <td>
                    
                 @Html.DisplayFor(modelItem => item.Timespan)
                   
                </td>
                
            <td>
                    <div class= "text-right" style="margin-right: 10px;">
                <a asp-action="CreateFunction" class="btn btn-info btn-sm" asp-route-id="@item.TaskId">Add Function</a> 
                <a asp-action="EditTask" class="btn btn-warning btn-sm" asp-route-id="@item.TaskId">Edit</a> 
                <a asp-action="Update" class="btn btn-success btn-sm" asp-route-id="@item.ProjectNumber">Update</a> 
                        </div>

            </td>
        </tr>
    autonum++;
}
    </tbody>
   
    </table>


  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Create Task</h4>
            </div>
                

                    <div class="modal-body col-lg-12">
                    <form asp-controller="ProjectManagement" asp-action="CreateTask" method="post">
                        <input type="hidden" value="@ViewData["ProjectNuber"]" name="ProjectNumber" id="ProjectNumber" />

                                <div class="col-sm-8 form-group">
                                        <label>Task Name</label>
                                    <div class="form-group">
                                        <input type="text" name="TaskName" id="TaskName" placeholder="Enter Task Name Here.." class="form-control">
                                    </div>
                                </div>
                       
                                <div class="col-sm-10 form-group">
                                <label>Estimated Start Date</label>
                                <div class="form-group">      
                                        <div class="input-group date form_date col-md-8" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                            <input class="form-control" size="10" type="text" name="TaskStart" id="TaskStart"  readonly>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                    </div>
                            </div>

                            <div class="col-sm-10 form-group">
                                <label>Estimated End Date</label>
                                <div class="form-group">      
                                        <div class="input-group date form_date col-md-8" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                            <input class="form-control" size="10" type="text" name="TaskEnd" id="TaskEnd"  readonly>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                    </div>
                            </div>
                            <div class= "col-sm-12 text-right">
                            <button type="submit" class="btn btn-primary">Submit</button> 
                        </div>
                        
                    </form>
                 </div>

                <div class="modal-footer">
                        
                 </div>
             
      </div>
      
    </div>
  </div>


