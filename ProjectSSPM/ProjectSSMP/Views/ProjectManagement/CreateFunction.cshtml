@model IEnumerable<ProjectSSMP.Models.ProjectManagement.CreateFunctionInputModel>

@{
    ViewData["Title"] = "Create Function";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}


<div class="container">
    <h2 class="well">@ViewData["ProjectName"] <span class="glyphicon glyphicon-chevron-right"></span> @ViewData["Taskname"] <span class="glyphicon glyphicon-chevron-right"></span>   Create Function  </h2>

             <div class="col-lg-4">
               <div class= "text-Left">
                    
                   @Html.ActionLink("Back", "CreateTask",
                  new { Controller = "ProjectManagement",id= ViewData["ProjectNuber"] },
                  new { @class="btn btn-danger btn-md"})
                </div>
        
            </div>
            <div class="col-lg-4"></div>
            <div class="col-lg-4">
                <div class= "text-right" style="margin-right: 10px;">
                    <button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModalAdd">Add Function</button>
                </div>
            </div>
    
    <div class="col-lg-12">&nbsp;</div>
    
    <table id="example" class="responsive" width="100%">
        <thead>
            <tr>
                <th>
                    Function ID
                </th>
                <th>
                    Function Name
                </th>

                <th>
                    Estimated Start
                </th>
                <th>
                    Estimated End
                </th>

                <th>
                    Estimated Variant
                </th>
                <th>

                



                </th>
            </tr>
        </thead>
        <tbody>
            @{ int autonum = 1; }

            @foreach (var item in Model)
            {
                <tr>
                    <td>

                        @autonum
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.FunctionName)
                    </td>


                    <td>

                        @Convert.ToString(string.Format("{0:dd MMMM yyyy}", item.FunctionStart))
                    </td>
                    <td>

                        @Convert.ToString(string.Format("{0:dd MMMM yyyy}", item.FunctionEnd))
                    
                    


                    <td>
                    @Html.DisplayFor(modelItem => item.Timespan)
                    </td>

                     
                    <td>
                        <div class="text-right" style="margin-right: 10px;">
                            <a href="javascript:void(0);" class="anchorDetail btn btn-warning btn-sm" data-id="@item.FunctionId">Edit</a>
                            <a asp-action="Update" class="btn btn-success btn-sm" asp-route-id="@item.FunctionId">Update</a>
                        </div>


                
            </td>

           
        </tr>
        autonum++;
}
        </tbody>

    </table>


  <!-- Modal -->
  <div class="modal fade" id="myModalAdd" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Create Function</h4>
            </div>
                

                    <div class="modal-body col-lg-12">
                        <form asp-controller="ProjectManagement" asp-action="CreateFunction" method="post">
                            <input type="hidden" value="@ViewData["ProjectNuber"]" name="ProjectNumber" id="ProjectNumber" />
                            <input type="hidden" value="@ViewData["TaskId"]" name="TaskId" id="TaskId" />

                            <div class="col-sm-8 form-group">
                                <label>Function Name</label>
                                <div class="form-group">
                                    <input type="text" name="FunctionName" id="FunctionName"
                                           data-val="true" data-val-required="The Function Name field is required."
                                           placeholder="Enter Task Name Here.." class="form-control">
                                    <span class="text-danger field-validation-valid"
                                          data-valmsg-for="FunctionName" data-valmsg-replace="true"></span>
                                </div>
                            </div>

                            <div class="col-sm-10 form-group">
                                <label>Estimated Start Date</label>
                                <div class="form-group">
                                    <div class="input-group date form_date col-md-8" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                        <input class="form-control" size="10" type="text" name="FunctionStart" id="FunctionStart"
                                               data-val="true" data-val-required="The Estimated Start Date field is required" >
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>
                                    <span class="text-danger field-validation-valid"
                                          data-valmsg-for="FunctionStart" data-valmsg-replace="true"></span>
                                </div>
                            </div>

                            <div class="col-sm-10 form-group">
                                <label>Estimated End Date</label>
                                <div class="form-group">
                                    <div class="input-group date form_date col-md-8" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                        <input class="form-control" size="10" type="text" name="FunctionEnd" id="FunctionEnd" 
                                               data-val="true" data-val-required="The Estimated Start Date field is required" >
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>
                                    <span class="text-danger field-validation-valid"
                                          data-valmsg-for="FunctionEnd" data-valmsg-replace="true"></span>
                                </div>
                            </div>

                            <div class="col-sm-8 form-group" >
                                <label>Responsible User</label>
                                <div class="form-group" >
                                    <select class="form-control" asp-items="ViewBag.UserSSPM"  name="UserId" id="UserId">
                                        <option>Please select </option>
                                    </select>
                                </div>
                            </div> 
                            <div class="col-sm-8 form-group">
                                        <label>Project Res.</label>
                                    <div class="form-group">
                                        <input type="text" name="ProjectResponsible" id="ProjectResponsible" placeholder="Enter ProjectResponsible Here.." class="form-control">
                                    </div>
                                </div>

                        
                            <div class= "col-sm-12 text-right">
                            <button type="submit" class="btn btn-primary">Submit</button> 
                        </div>
                        
                    </form>

                 </div>

                <div class="modal-footer">
                        
                 </div>
             
      </div>
      
    </div>
  </div>
</div>



<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>

</div>

@section scripts
    {
    

    <script>

        var TeamDetailPostBackURL = '/ProjectManagement/EditFunction/';
        $(function () {
            $(".anchorDetail").click(function () {
                //debugger;
                var $buttonClicked = $(this);
                var id = $buttonClicked.attr('data-id');
                var options = { "backdrop": "static", keyboard: true };
                $.ajax({
                    type: "GET",
                    url: TeamDetailPostBackURL,
                    contentType: "application/json; charset=utf-8",
                    data: { "Id": id },
                    datatype: "json",
                    success: function (data) {
                        //debugger;
                        $('#myModalContent').html(data);
                        $('#myModal').modal(options);
                        $('#myModal').modal('show');

                    },
                    error: function () {
                        alert("Dynamic content load failed.");
                    }
                });
            });
            //$("#closebtn").on('click',function(){
            //    $('#myModal').modal('hide');

            $("#closbtn").click(function () {
                $('#myModal').modal('hide');
            });
        });

    </script>

}




