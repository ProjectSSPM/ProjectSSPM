
@{
    ViewData["Title"] = "Add Menu";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="container">
    <h2 class="well">Add Menu</h2>
    <div class="col-lg-12 well">
        <div class="row">
            <form asp-controller="MenuManagenent" asp-action="AddMenu"  method="post">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-3">
                                
                                <label for="name">Name Menu</label>
                                <input type="text" name="MenuName" class="form-control" />
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-3">
                                <label for="name">URL Menu</label>
                                <input type="text" name="MenuName" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-3">
                                <label for="name">Icon Menu</label>
                                <input type="text" name="MenuName" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="text-right" style="margin-right: 10px;">
                        <a asp-action="Index" class="btn btn-danger">Back</a>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>


                </div>
            </form>
        </div>
    </div>
   

</div>

