@model ProjectSSMP.Models.Timesheet.TimeSheetInputModel




<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title" id="myModalLabel">TimeSheet <span class="glyphicon glyphicon-chevron-right"></span>@ViewData["ProjectName"]</h4>
</div>
<div class="modal-body">
    <div class="container">
        <form asp-controller="TimeSheet" asp-action="AddTimeSheet" method="post">

            <input type="hidden" asp-for="ProjectNumber" />
            <input type="hidden" asp-for="TaskId" />
            <input type="hidden" asp-for="FunctionId" />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ProjectName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ProjectName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.TaskName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TaskName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.FunctionName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FunctionName)
                </dd>
            </dl>




            <div class="col-sm-6 form-group">
                <label>Estimated Start Date</label>
                <div class="form-group">

                    <div id="startdatetime-from" class="input-group date form_time col-md-8" data-date="" data-date-format="hh:ii" data-link-field="dtp_input3" data-link-format="hh:ii">
                        <input class="form-control" size="10" asp-for="TimeSheetStart" type="datetime" name="TimeSheetStart" id="TimeSheetStart" value="" readonly>

                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                    </div>
                    @Html.ValidationMessageFor(m => m.TimeSheetStart, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="col-sm-12 "></div>
            <div class="col-sm-6 form-group">
                <label>Estimated Stop Date</label>
                <div class="form-group">

                    <div class="input-group date form_time col-md-8" data-date="" data-date-format="hh:ii" data-link-field="dtp_input3" data-link-format="hh:ii">

                        <input class="form-control" size="10" asp-for="TimeSheetEnd" type="text" name="TimeSheetEnd" id="TimeSheetEnd" readonly>


                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                    </div>
                    @Html.ValidationMessageFor(m => m.TimeSheetEnd, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-sm-12 form-group">

                <div class="col-sm-4 "></div>

                <a asp-action="Index" class="btn btn-danger">Back</a>

                <input type="submit" value="Save" class="btn btn-default btn-primary" />

            </div>


        </form>
    </div>

</div>
<script type="text/javascript" src="~/js/bootstrap-datetimepicker.js" charset="UTF-8"></script>
<script type="text/javascript" src="~/js/locales/bootstrap-datetimepicker.fr.js" charset="UTF-8"></script>
<script type="text/javascript">



    $('.form_datetime').datetimepicker({
        //language:  'en',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
    $('.form_date').datetimepicker({
        language: 'en',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
    $('.form_time').datetimepicker({
        language: 'en',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 1,
        minView: 0,
        maxView: 1,
        forceParse: 0
    });
</script>

<script type="text/javascript">
    var d = new Date();
    var month = d.getMonth();
    var day = d.getDate();
    var year = d.getFullYear();
    var cd = new Date(year, month, day, 12, 00);
    var check = cd.getTime();


    var itme = d.getTime();
    if (itme < check) {
        $("#TimeSheetStart").val("09:00");
        $("#TimeSheetEnd").val("12:00");
    }
    else if (itme > check) {

        $("#TimeSheetStart").val("13:00");
        $("#TimeSheetEnd").val("18:00");
    }

</script>

   
