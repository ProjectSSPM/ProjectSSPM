@model IEnumerable<ProjectSSMP.Models.Timesheet.TimeSheetInputModel>
@{
    ViewData["Title"] = "TimeSheet Index";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}


<div class="container">
    <h2 class="well">TimeSheet</h2>
    <div class="row">
    @foreach (var item in Model)
    {

        <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
            <div class="card">
                <img class="card-img-top" src="https://www.tyche.co.th/wp-content/uploads/2016/02/tree-tycheVNew2SMELL1.png">
                <div class="card-block">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.ProjectName)</h4>
                    <div class="meta">
                        <input type="hidden" value="@item.ProjectNumber" name="ProjectNumber" id="ProjectNumber" />
                        @Html.DisplayFor(modelItem => item.ProjectId)
                    </div>
                    <div class="card-text">
                        @Html.DisplayFor(modelItem => item.Note)
                    </div>
                </div>
                <div class="card-footer">
                    <small>Estimate End: @item.ProjectEnd</small>
                    <div class="col-sm-6"></div>
                    <div class="col-sm-4">
                    <a asp-action="TimeSheet" class="btn btn-info btn-sm" asp-route-id="@item.ProjectNumber">Select</a>
                        </div>
                    <div class="col-sm-6">&nbsp;</div>
                </div>
            </div>
        </div>
    }
        </div>
</div>
