@model IEnumerable<ProjectSSMP.Models.Timesheet.TimeSheetInputModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}
<h2>Test</h2>

 <table id="Timesheet" class="responsive" width="100%">
    <thead>
        <tr>
               
                <th>
                    Task Name
                </th>

                <th>
                    Function Name
                </th>

                 <th>
                    
                 
                   
                </th>
        </tr>
    </thead>
    <tbody>

        @{  int autonum = 1;  }
        
@foreach (var item in Model) {
        <tr>
            
            <td>
              
                @Html.DisplayFor(modelItem => item.TaskName)
            </td>


            <td>
                
                @Html.DisplayFor(modelItem => item.FunctionName)
            </td>



                
            <td>
                    <div class= "text-right" style="margin-right: 10px;">
                <a asp-action="CreateFunction" class="btn btn-info btn-sm" asp-route-id="@item.TaskId">Add Function</a> 
                <a asp-action="EditTask" class="btn btn-warning btn-sm" asp-route-id="@item.TaskId">Edit</a> 
                <a asp-action="Update" class="btn btn-success btn-sm" asp-route-id="@item.ProjectNumber">Update</a> 
                        </div>

            </td>
        </tr>

}
    </tbody>